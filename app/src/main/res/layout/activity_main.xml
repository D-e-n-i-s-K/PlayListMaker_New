<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    style="@style/mainActivityLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/app_name"
            android:textColor="@color/pl_yp_white"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="@dimen/menu_title_text_size"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <Button style="@style/mainActivityButton"
            android:id="@+id/buttonSearch"
            android:text="@string/title_search_button"
            app:icon="@drawable/search" />

        <Button style="@style/mainActivityButton"
            android:id="@+id/buttonMedia"
            android:text="@string/title_media_library_button"
            app:icon="@drawable/media_library"/>

        <Button style="@style/mainActivityButton"
            android:id="@+id/buttonSettings"
            android:text="@string/title_settings_button"
            app:icon="@drawable/settings" />

    </LinearLayout>
</LinearLayout>
