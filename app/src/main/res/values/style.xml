<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainActivityButton">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:backgroundTint">@color/pl_yp_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/pl_yp_black</item>
        <item name="android:textSize">@dimen/menu_main_button_text_size</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:fontStyle">normal</item>

<!--        font-family: YS Display;-->
<!--        font-size: 22px;-->
<!--        font-style: normal;-->
<!--        font-weight: 500;-->
<!--        line-height: normal;-->

        <item name="cornerRadius">@dimen/menu_activity_Button_cornerRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/menu_activity_iconPadding</item>
        <item name="iconTint">@color/pl_yp_black</item>

    </style>

    <style name="settingActivityButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/pl_yp_white</item>

        <item name="android:paddingStart">@dimen/menu_setting_button_paddingStart</item>
        <item name="android:paddingTop">@dimen/menu_setting_button_paddingTop</item>
        <item name="android:paddingEnd">@dimen/menu_setting_button_paddingEnd</item>
        <item name="android:bottom">@dimen/menu_setting_button_paddingBottom</item>

        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">@integer/menu_setting_button_letterSpacing0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/pl_yp_black</item>
        <item name="android:textSize">@dimen/menu_setting_button_text_size</item>

        <!--        color: #000;-->
        <!--        /* YS/Regular/16 */-->
        <!--        font-family: YS Display;-->
        <!--        font-size: 16px;-->
        <!--        font-style: normal;-->
        <!--        font-weight: 400;-->
        <!--        line-height: normal;-->

        <item name="iconGravity">end</item>
        <item name="iconSize">@dimen/menu_setting_button_icon_size</item>
        <item name="iconTint">@color/black</item>

    </style>

</resources>

